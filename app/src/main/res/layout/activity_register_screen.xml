<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/lightgreen"
    tools:context=".RegisterScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:textSize="52sp"
            android:text="Register"
            android:textColor="@color/beige"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text=" your trail begins here!"
            android:textColor="@color/beige"/>
        <ProgressBar
            android:id="@+id/PB_CRE"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/beige">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_CRE_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Username"
                android:textColor="@color/beige"
                android:textColorHint="@color/beige"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawableStart="@drawable/ic_person_white_24dp"
                android:inputType="text|textPersonName"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/beige">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_CRE_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Email"
                android:textColor="@color/beige"
                android:textColorHint="@color/beige"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawableStart="@drawable/ic_email_white_24dp"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/beige">
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/ET_CRE_Pass"
            android:textColorHint="@color/beige"
            android:textColor="@color/beige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Password (At Least 8 Characters)"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:inputType="textPassword"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/beige">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/ET_CRE_Confirm_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Confirm Password"
                android:textColorHint="@color/beige"
                android:textColor="@color/beige"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                android:drawableStart="@drawable/ic_lock_outline_white_24dp"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/BTN_CRE_CreateAccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColorHighlight="#000000"
            android:textColor="@color/beige"
            android:background="@drawable/button_bg"
            android:textSize="16sp"
            android:text="Register"
            android:onClick="registerScreenClick"/>
    </LinearLayout>
</ScrollView>